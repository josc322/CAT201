<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
    android:background="@drawable/_3"
    tools:context=".AirlineActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp">

        <ImageView
            android:id="@+id/airlineImage"
            android:layout_width="132dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/airplane" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="140dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_view_airlineName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MAS "
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

            <TextView
                android:id="@+id/text_view_airlineId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Airline ID: MH 232"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

            <TextView
                android:id="@+id/text_view_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date: 03/02/2022"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

            <TextView
                android:id="@+id/text_view_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Time: 06:00 - 07:00 (1 HR)"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

            <TextView
                android:id="@+id/text_view_from"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="From: Penang"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

            <TextView
                android:id="@+id/text_view_to"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="To: Kuala Lumpur"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

            <TextView
                android:id="@+id/text_view_condition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cabin Class: First Class"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

        </LinearLayout>

        <Button
            android:id="@+id/button"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="110dp"
            android:background="@drawable/back2"
            android:text="Select"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold" />
    </android.support.v7.widget.CardView>

</RelativeLayout>
