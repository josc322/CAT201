<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="7dp">

    <ImageView
        android:id="@+id/busImage"
        android:layout_width="135dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/sutha" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="140dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_view_airlineName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MAS Airlines"
            android:gravity="center"
            android:textStyle="bold"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/text_view_airlineNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Airline Number: MH370"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/text_view_cabinClass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cabin Class: Business Class"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />


        <TextView
            android:id="@+id/text_view_Date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date: 14/04/2019"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/text_view_From"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="From: Penang"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/text_view_To"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="To: Melaka"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

    </LinearLayout>
</RelativeLayout>